<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bully.Views.Main.Templates.MenuItemTemplate">
    <StackLayout
            BackgroundColor="#eee"
            Orientation="Horizontal">
        <Image
                Source="logo.png"
                Aspect="AspectFill"
                WidthRequest="100"/>
        <StackLayout
              Orientation="Vertical">
            <Label
                Text="{Binding Title}"
                TextColor="#f35e20" />
            <Label
                Text="{Binding Description}"
                TextColor="#503026" />
        </StackLayout>
    </StackLayout>
</ContentView>