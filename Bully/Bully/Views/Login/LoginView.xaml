<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bully.Views.Login.LoginView"
             Title="{Binding Title}"
     Style="{ StaticResource MainPageStyle}">
    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">

        <Image Source="logo.png"></Image>
        <Button Command="{Binding LoginCommand}" Style="{StaticResource AppButtomSocial}" Text="Login con Facebook"></Button>

        <Button  Command="{Binding MainCommand}" Style="{StaticResource AppButtomSocial}" Text="Acceder directamente"></Button>
    </StackLayout>
</ContentPage>